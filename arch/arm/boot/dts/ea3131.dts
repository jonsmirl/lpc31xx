/dts-v1/;
/include/ "lpc3131.dtsi"

/ {
	model = "Electronic Arts EA3131";
	compatible = "ea,ea3131", "nxp,lpc3131";

	chosen {
		bootargs = "console=ttyS0,115200 init=/etc/init rw";
	};

	memory@70000000 {
		reg = <0x70000000 0x4000000>;
	};

	ahb {
		apb {
			dbgu: serial@fffff200 {
				status = "okay";
			};

			usart1: serial@fffb4000 {
				status = "okay";
			};
		};
	};
};
